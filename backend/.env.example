# MongoDB Database Connection
# For local MongoDB: mongodb://localhost:27017/ecotrade
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/ecotrade
MONGODB_URI=mongodb://localhost:27017/ecotrade

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Secret for Authentication (change this to a secure random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Email Configuration (for nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
